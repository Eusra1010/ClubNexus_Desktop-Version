<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.StudentSignupController"
           styleClass="root">

    <VBox alignment="CENTER"
          spacing="18"
          maxWidth="360"
          fillWidth="true"
          styleClass="login-box">

        <Label text="STUDENT SIGN UP"
               styleClass="login-title"/>

        <VBox spacing="6">
            <Label text="Full Name"
                   styleClass="white-label"/>

            <TextField fx:id="fullName"
                       promptText="Enter full name"
                       styleClass="underline-field"/>
        </VBox>

        <VBox spacing="6">
            <Label text="Roll"
                   styleClass="white-label"/>

            <TextField fx:id="roll"
                       promptText="Enter roll"
                       styleClass="underline-field"/>
        </VBox>

              <VBox spacing="6">
                     <Label text="University" styleClass="white-label"/>
                     <TextField fx:id="university"
                                      promptText="Enter university name"
                                      styleClass="underline-field"/>
              </VBox>

        <VBox spacing="6">
            <Label text="Create Password"
                   styleClass="white-label"/>

            <HBox spacing="6" alignment="CENTER_RIGHT">

                <PasswordField fx:id="passwordField"
                               promptText="Create password"
                               styleClass="underline-field"
                               HBox.hgrow="ALWAYS"/>

                <TextField fx:id="visiblePasswordField"
                           promptText="Create password"
                           styleClass="underline-field"
                           visible="false"
                           managed="false"
                           HBox.hgrow="ALWAYS"/>

                <Button text="ðŸ‘"
                        onAction="#togglePassword"
                        styleClass="eye-btn"/>
            </HBox>

        </VBox>


        <Label fx:id="passwordHint"
               text=""
               wrapText="true"
               style="-fx-text-fill: #FFD2D2; -fx-font-size: 12;"/>

        <Button fx:id="signupBtn"
                text="SIGN UP"
                onAction="#onSignup"
                maxWidth="Infinity"
                prefHeight="50"
                disable="true"
                styleClass="login-btn-white"/>

    </VBox>
</StackPane>
