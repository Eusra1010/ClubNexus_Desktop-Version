<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.StudentMyRegistrationsController"
      spacing="16"
      styleClass="content-area">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="â† Back" styleClass="header-btn" onAction="#onBack"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="My Registrations" styleClass="page-title"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="eventCol" text="Event" prefWidth="220"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="140"/>
            <TableColumn fx:id="statusCol" text="Status" prefWidth="120"/>
            <TableColumn fx:id="paidCol" text="Paid" prefWidth="100"/>
            <TableColumn fx:id="actionsCol" text="Actions" prefWidth="300"/>
        </columns>
        <placeholder>
            <Label text="No registrations yet" styleClass="empty-text"/>
        </placeholder>
    </TableView>
</VBox>
