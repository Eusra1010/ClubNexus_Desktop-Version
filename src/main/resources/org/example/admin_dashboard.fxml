        <VBox prefWidth="240"
              spacing="20"
              styleClass="sidebar">

            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <VBox alignment="CENTER" spacing="8" styleClass="profile-box">
                <Label text="ðŸ‘¤" styleClass="profile-icon"/>
